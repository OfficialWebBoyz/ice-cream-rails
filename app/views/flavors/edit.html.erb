<main id='main' class="container">
  <h1>
    Edit: <%= @flavor.name %>
  </h1>
  <p class="text-sm">Sku: #<%= @flavor.sku %></p>
  <p class="text-sm">Last edited: <%= @flavor.updated_at %></p>
  <%# errors %>
  <% if flash[:error] %>
    <p class="text-error">
      <%= flash[:error] %>
    </p>
  <% end %>
  <%# form %>
  <%= form_with(method: :patch, url: update_flavor_path(@flavor)) do %>
    <div class="flex flex-col gap-3">
      <label class="form-control" for="name">Name</label>
      <input 
      class="input input-bordered w-full max-w-xs" 
      type="text" name="name" id="name" value="<%= @flavor.name %>">
      <button type="submit" class="btn btn-primary w-fit">
        Save
      </button>
    </div>
  <% end %>
</main>
